{
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo lint",
    "web": "turbo run dev --filter @org/web",
    "api": "turbo run dev --filter @org/web",
    "@org/web": "yarn workspace @org/web",
    "@org/api": "yarn workspace @org/api",
    "@org/commons": "yarn workspace @org/commons"
  },
  "devDependencies": {
    "eslint": "7.32.0",
    "prettier": "^2.5.1",
    "turbo": "^1.9.3"
  }
}
